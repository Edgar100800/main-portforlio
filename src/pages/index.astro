---
import Layout from '@/layouts/Layout.astro';
import { SparklesText } from '@/components/magicui/sparkles-text';
import { ProfileImage } from '@/components/ProfileImage';
// Importa componentes de Magic UI / Shadcn aquÃ­
// Ejemplo: import { Meteors } from 'magic-ui-react'; // AsegÃºrate de tener react instalado si usas componentes react
---

<Layout title="Edgar Chambilla | Portfolio">
	<main style="background: linear-gradient(135deg, #5f59ae, #3730a3, #2563eb)" class="min-h-screen">
		<div class="container mx-auto px-6 py-12">
			<!-- Profile Section -->
			<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-10">
				<!-- Mobile: Image on top, Desktop: Image on left -->
				<div class="w-full md:w-2/5">
					<ProfileImage 
						src="/profile.webp" 
						alt="Edgar Chambilla" 
						className="w-full aspect-square max-w-[500px] mx-auto"
						client:visible
					/>
				</div>
				
				<!-- Content -->
				<div class="w-full md:w-3/5 text-white">
					<div class="mb-6">
						<p class="text-xl mb-2">ðŸ‘‹ Hello I'm</p>
						<h1 class="text-5xl md:text-6xl font-bold mb-6">Edgar Chambilla</h1>
						<SparklesText 
							colors={{ first: "#9E7AFF", second: "#FE8BBB" }}
							className="text-3xl md:text-5xl mb-6"
							client:visible
						>
							Full Stack developer
						</SparklesText>
					</div>
					
					<div class="space-y-4 mb-8">
						<p class="text-xl">
							Student of <span class="text-yellow-300 font-semibold">Computer Science</span> at UTEC. Passionate about <span class="text-blue-300 font-semibold">Machine Learning</span> and <span class="text-blue-300 font-semibold">Cloud Architecture</span>.
						</p>
						<p class="text-lg">
							I have developed web and mobile applications and I love the startup methodology.
						</p>
					</div>
					
					<!-- Social Links -->
					<div class="flex gap-4">
						<a 
							href="https://linkedin.com/in/your-linkedin" 
							class="inline-flex items-center justify-center bg-black/20 hover:bg-black/30 text-white rounded-lg px-6 py-3 transition-colors"
							target="_blank"
							rel="noopener noreferrer"
						>
							<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-linkedin mr-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
								<path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"></path>
								<path d="M8 11l0 5"></path>
								<path d="M8 8l0 .01"></path>
								<path d="M12 16l0 -5"></path>
								<path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
							</svg>
							LinkedIn
						</a>
						<a 
							href="https://github.com/your-github" 
							class="inline-flex items-center justify-center bg-black/20 hover:bg-black/30 text-white rounded-lg px-6 py-3 transition-colors"
							target="_blank"
							rel="noopener noreferrer"
						>
							<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github mr-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
								<path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path>
							</svg>
							GitHub
						</a>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
	/* Actualizado para Tailwind v4.1 */
	@import "tailwindcss";

	/* AnimaciÃ³n para el borde brillante */
	@keyframes shine {
		0% {
			background-position: 0% 0%;
		}
		100% {
			background-position: 300% 300%;
		}
	}

	.animate-shine {
		animation: shine 8s linear infinite;
		will-change: background-position;
	}
</style>
