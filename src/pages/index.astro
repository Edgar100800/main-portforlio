---
import Layout from '@/layouts/Layout.astro';
import { SparklesText } from '@/components/magicui/sparkles-text';
import { ProfileImage } from '@/components/ProfileImage';
import { profile, socialLinks as rawSocialLinks } from '@/lib/links-data.ts';
import { Instagram, Linkedin, Github, Youtube } from 'lucide-react';
import ProjectsSection from '@/components/ProjectsSection';
// Importa componentes de Magic UI / Shadcn aquÃ­
// Ejemplo: import { Meteors } from 'magic-ui-react'; // AsegÃºrate de tener react instalado si usas componentes react

// Find LinkedIn and GitHub links dynamically
const linkedinLink = rawSocialLinks.find(link => link.icon === 'linkedin');
const githubLink = rawSocialLinks.find(link => link.icon === 'github');
// const youtubeLink = rawSocialLinks.find(link => link.icon === 'youtube');
const instagramLink = rawSocialLinks.find(link => link.icon === 'instagram');


---

<Layout title="Edgar Chambilla | Portfolio">
	<main style="background: linear-gradient(135deg, #5f59ae, #3730a3, #2563eb)" class="min-h-screen">
		<div class="container mx-auto px-6 py-12">
			<!-- Profile Section -->
			<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-10">
				<!-- Mobile: Image on top, Desktop: Image on left -->
				<div class="w-full md:w-2/5">
					<ProfileImage 
						src="/profile.webp" 
						alt="Edgar Chambilla" 
						className="w-full aspect-square max-w-[500px] mx-auto"
						client:visible
					/>
				</div>
				
				<!-- Content -->
				<div class="w-full md:w-3/5 text-white">
					<div class="mb-6">
						<p class="text-xl mb-2">ðŸ‘‹ Hello I'm</p>
						<h1 class="text-5xl md:text-6xl font-bold mb-6">Edgar Chambilla</h1>
						<SparklesText 
							colors={{ first: "#9E7AFF", second: "#FE8BBB" }}
							className="text-3xl md:text-5xl mb-6 text-fuchsia-200"
							client:visible
						>
							Full Stack developer
						</SparklesText>
					</div>
					
					<div class="space-y-4 mb-8">
						<p class="text-xl">
							Student of <span class="text-yellow-300 font-semibold">Computer Science</span> at UTEC. Passionate about <span class="text-blue-300 font-semibold">Machine Learning</span> and <span class="text-blue-300 font-semibold">Cloud Architecture</span>.
						</p>
						<p class="text-lg">
							I have developed web and mobile applications and I love the startup methodology.
						</p>
					</div>
					
					<!-- Social Links -->
					<div class="flex flex-col md:flex-row gap-4">
						{linkedinLink && (
							<a 
								href={linkedinLink.href}
								class="inline-flex items-center justify-center bg-black/20 hover:bg-black/30 text-white rounded-lg px-6 py-3 transition-colors w-full md:w-auto"
								target="_blank"
								rel="noopener noreferrer"
							>
								<Linkedin className="w-4 h-4 mr-2" />
								LinkedIn
							</a>
						)}
						{githubLink && (
							<a 
								href={githubLink.href} 
								class="inline-flex items-center justify-center bg-black/20 hover:bg-black/30 text-white rounded-lg px-6 py-3 transition-colors w-full md:w-auto"
								target="_blank"
								rel="noopener noreferrer"
							>
								<Github className="w-4 h-4 mr-2" />
								GitHub
							</a>
						)}
						{instagramLink && (
							<a 
								href={instagramLink.href} 
								class="inline-flex items-center justify-center bg-black/20 hover:bg-black/30 text-white rounded-lg px-6 py-3 transition-colors w-full md:w-auto"
								target="_blank"
								rel="noopener noreferrer"
							>
								<Instagram className="w-4 h-4 mr-2" />
								Instagram
							</a>
						)}
					</div>
				</div>
			</div>
			<ProjectsSection />
		</div>
	</main>
</Layout>

<style>
	/* Actualizado para Tailwind v4.1 */
	@import "tailwindcss";

	/* AnimaciÃ³n para el borde brillante */
	@keyframes shine {
		0% {
			background-position: 0% 0%;
		}
		100% {
			background-position: 300% 300%;
		}
	}

	.animate-shine {
		animation: shine 8s linear infinite;
		will-change: background-position;
	}
</style>
