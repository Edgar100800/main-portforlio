---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header';
import I18nProvider from '@/components/I18nProvider';
import MainContent from '@/components/MainContent';
---

<Layout title="Edgar Chambilla | Portfolio">
	<I18nProvider client:load>
		<Header client:load />
		<main style="background: linear-gradient(135deg, #5f59ae, #3730a3, #2563eb)" class="min-h-screen pt-20">
			<MainContent client:load />
		</main>
	</I18nProvider>
</Layout>

<style>
	/* Actualizado para Tailwind v4.1 */
	@import "tailwindcss";

	/* Animaci√≥n para el borde brillante */
	@keyframes shine {
		0% {
			background-position: 0% 0%;
		}
		100% {
			background-position: 300% 300%;
		}
	}

	.animate-shine {
		animation: shine 8s linear infinite;
		will-change: background-position;
	}
</style>